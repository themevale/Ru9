{%- style -%}
  .template-product .nt_se_{{section.id}} {
    position: relative;
    z-index: 10;
  }
  .nt_se_{{ section.id }}{
      background: {{ section.settings.bg}};
      position: relative;
  }
  .phone-number {
    text-align: center; /* Center the phone number */
    font-size: 18px;    /* Adjust the font size as needed */
    margin-top: 2px;   /* Add some space above the phone number */
    font-weight: bold; /* Make the text bold */
  }
  .pf-grid {
      display: grid;
      grid-template-columns: repeat(2,1fr);
  }
  .rich-text__text a{
      color: #345DAA
  }
  .container {
      width: 100%;
      margin-right: auto;
      margin-left: auto;
  }
  .pf-grid__item.item-left {
      grid-column: 1;
  }

  .pf-rich-text .item-left .rich-text__heading {
      position: relative;
      max-width: 80%;
      margin: 0 auto;
  }
  .pf-rich-text  .item-left .h3{
      margin: 80px 0 30px;
      font-weight: 600;
      font-size: 31px;
      line-height: 1.2;
      color: #345DAA;
  }
  .pf-rich-text .item-right .h3 {
    margin-bottom: 12px;
  }
  .pf-grid__item.item-right .pf-rich-text--image{
    margin-bottom: -142px;
  }
  .pf-rich-text--content > div {
    position: relative;
    z-index: 2;
  }

  .cloud_block {
    position: absolute !important;
  }
  .cloud_1 {
    top: -1%;
    left: -17px;
    right: auto;
  }
  .cloud_2 {
    top: 50%;
    left: auto;
    right: 0;
    transform: translate(50px);
    width: 100px;
  }
  .pf-rich-text--content .link-icon:after{
    content: none
  }
  .pf-rich-text--content .link-icon{
    color: #345DAA;
  }
  .pf-rich-text--content .link-icon svg{
    fill: #345DAA;
  }
  a.link-icon {
    position: relative;
    display: inline-block;
    font-size: 15px;
  }
  .rich-text__image {
    width: 100%;
    height: 100%;
  }
  a.btn-item--right {
    background: #FFC90B;
    color: #345DAA;
    font-size: 19px;
    font-weight: 700;
    padding: 11px 60px;
    line-height: 1;
    border: none;
    border-radius: 40px;
    text-transform: uppercase;
  }
  .btn-item--right {
    margin-bottom: 50px;
  }

  .pf-rich-text--content.border-crescent:before {
    content: '';
    width: 100%;
    height: 80%;
    position: absolute;
    top: 0;
    left: 0;
    background: #fff;
    display: block;
    border: 3px solid #001780;
    border-bottom: 0;
    border-radius: 50% 50% 0 0;
    z-index: 1;
  }
  .pf-rich-text--content.border-crescent:after {
    content: '';
    width: 100%;
    height: 30%;
    position: absolute;
    border: 3px solid #001780;
    bottom: -2px;
    border-bottom: 0;
    background: #fff;
    z-index: 1;
    border-top: 0;
  }
  .pf-rich-text--content {
    max-width: 400px;
    padding: 0 0 0;
    margin: 0 auto;
    position: relative;
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: flex-end;
  }
  .rte-setting {
    margin: 13px 0 29px;
  }
  .pf-grid__item {
    grid-column: 2;
  }

  @media (min-width: 769px) {
    .visible-xs {
        display: none;
    }
  }
  .pf-rich-text .item-left .h3 {
    margin: 103px 0 30px;
    font-size: 28px;
  }
  @media (max-width: 768px) {
    .pf-rich-text--content a.btn-item--right {
      margin: 27px auto 50px;
      font-size: 20px;
      max-width: 90%;
      height: 40px;
      padding: 10px 35px;
      line-height: 1;
    }
    .rte-setting{
      margin: 13px auto 0;
    }
    a.btn-item--right{
      color: #345DAA
    }
    .pf-rich-text .item-left .h3 {
      margin: 0 auto;
      font-weight: 600;
      font-size: 20px;
      line-height: 24px;
      color: #345DAA;
      margin-top: 33px;
    }
    .rich-text  p{
      font-weight: 400;
      font-size: 12px;
      line-height: 18px;
      margin: 0
    }
    .rte-setting{
      margin: 5px auto;
    }
    .btn-item--right {
        margin-bottom: 42px;
    }
    .rich-text p a{
      color: #345DAA
    }
    .hidden-xs {
      display: none!important;
    }
    .contact-us-bannent .pf-grid {
      display: block;
    }
    .pf-grid__item.item-right .pf-rich-text--image {
      margin-bottom: -66px;
    }
  }

  @media (max-width: 768px) {
    .pf-grid__item.item-right .pf-rich-text--image {
      margin-bottom: -17%;
    }
  }
{%- endstyle -%}
